<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->


			<% for (let i = 0; i < 4; i++) { %> 
				<div class="col-12 col-sm-6 col-lg-3"> 
				   <section class="product-box">
					   <a href="/products/<%= buzos_buzos[i].id %>">
						   <figure class="product-box_image">
							   <img src="<%= buzos_buzos[i].imagen %>" alt=" ">
						   </figure>
						   <article class="product-box_data">
							   <h2> <%= buzos_buzos[i].marca + '' + buzos_buzos[i].modelo %> </h2>
							   <h3> 
								   Talles disponibles: <%= buzos_buzos[i].talles %>
								   <h3>
								   El buzo se publico el: <%= buzos_buzos[i].fechaDePublicacion %>

									</h3>
							   </h3>
							   <p>Comentarios: <%=buzos_buzos[i].comentarios.length %> </p>
						   </article>
					   </a>
				   </section>
			   	</div>

				<% } %>   
   
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>

			

	<%- include('./partials/footer') %>


</body>	
</html>